package com.usp.util;

public class DoubleToByte {

	private double[] input;
	private double min;
	private double max;

	public DoubleToByte(double[] input) {
		this.input = input;
		setMinMax();
	}

	public double getMin() {
		return min;
	}

	public double getMax() {
		return max;
	}

	private void setMinMax() {
		max = input[0];
		min = input[0];
		for (double d : input) {
			if (max < d) {
				max = d;
			}
			if (min > d) {
				min = d;
			}
		}
		
	}
}
